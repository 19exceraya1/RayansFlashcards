<?xml version="1.0" encoding="utf-8"?>

<android.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/flashcard_question"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:text="What is the most populated country in the world?"
        android:textColor="#DAD4D4"
        android:textSize="40sp"
        android:gravity="center"
        android:visibility="visible"
        android:layout_margin="10dp"
        android:elevation="40dp"
        android:background="@drawable/solid_color_shape"/>
    <TextView
        android:id="@+id/flashcard_answer"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:text="China"
        android:textSize="40sp"
        android:gravity="center"
        android:visibility="invisible"
        android:textColor="#eb3480"
        android:background="#3437eb" />

</android.widget.RelativeLayout>